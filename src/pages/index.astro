---
import BaseLayout from "../layouts/BaseLayout.astro";
import Fondo from "../components/Fondo.astro";
import AboutLuxury from "../components/Home/AboutLuxury.astro";
import PremiumPrograms from "../components/Home/PremiumPrograms.astro"
import LuxuryTrains from "../components/Home/LuxuryTrains.astro"
import AmazonRiver from "../components/Home/AmazonRiver.astro"
import LiveExclusivePeru from "../components/Home/LiveExclusivePeru.astro"
import RequestPersonalizedItinerary from "../components/Home/RequestPersonalizedItinerary.astro"

import background from "../assets/backgrounds/cover-index.webp" 

const title = "home"
const description = "Discover Peru with the leading luxury travel operator. Tailor-made journeys to Machu Picchu, Amazon Cruises, and Luxury Trains. 50 years of excellence and authenticity."
---

<BaseLayout title={title} description={description}>
	<Fondo fondo={background} />
	<main>
		<AboutLuxury />
		<PremiumPrograms />
		<LuxuryTrains />
		<AmazonRiver />
		<LiveExclusivePeru />
		<RequestPersonalizedItinerary />
	</main>
</BaseLayout>

