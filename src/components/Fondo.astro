---
const { fondo } = Astro.props;
---
<section class="fondo-section fade-in">
    <div class="fondo">
    </div>
</section>

<style define:vars={{ fondo }}>
    
    .fade-in {
        opacity: 0.8;
        animation: fadeIn 1s forwards;
    }
    @keyframes fadeIn {
        to { opacity: 1; }
    }

    .fondo {
        width: 100%;
        height: 43em;
        background-image: var(--fondo);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        animation: efectZoom 10s ease-in-out forwards;
    }

    .fondo-section {
        overflow: hidden;
    }

    .fondo-section:hover .fondo {
        transform: scale(1);
    }

    @keyframes efectZoom {
        from { 
            transform: scale(1); 
        }
        to { 
            transform: scale(1.2); 
        }
    } 
</style>