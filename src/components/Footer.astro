<style>
    .footer {
        padding: 60px 20px;
        background-color: #313131; 
        color: white;
        font-family: 'Poppins', sans-serif;
        display: flex;
        justify-content: center;
    }

    .footer-container {
        display: flex;
        flex-direction: column;
        gap: 50px;
        width: 100%;
        max-width: 1400px;
    }

    @media (min-width: 1024px) {
        .footer-container {
            flex-direction: row;
            justify-content: space-between;
            align-items: flex-start;
        }
    }

    .container-enlaces {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 40px;
        flex: 2;
    }

    .container-lista h4, .formulario-subscribe h4 {
        font-size: 16px;
        font-weight: 600;
        letter-spacing: 1px;
        margin-bottom: 20px;
        color: #DABB42; 
    }

    .container-lista ul {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
        font-weight: 300;
        font-size: 14px;
        color: #cccccc;
    }
   
    .container-lista ul li {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .container-lista a {
        text-decoration: none;
        display: flex;
        color: inherit;
        transition: color 0.3s;
    }

    .container-lista a:hover {
        color: white;
    }

    .formulario-subscribe {
        flex: 1;
        min-width: 300px;
    }

    .formulario-subscribe form {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .input-group {
        display: flex;
        gap: 10px;
    }

    .formulario-subscribe input {
        width: 100%;
        background-color: white;
        border: 1px solid #444;
        color: white;
        padding: 12px;
        font-size: 14px;
        border-radius: 4px;
        outline: none;
    }

    .formulario-subscribe input::placeholder {
        color: #777;
    }

    .formulario-subscribe button {
        background-color: #3F5C3A;
        color: white;
        padding: 14px;
        border: none;
        border-radius: 4px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
        margin-top: 5px;
    }

    .formulario-subscribe button:hover {
        background-color: #4d7046;
    }

    @media (max-width: 480px) {
        .input-group {
            flex-direction: column;
        }
    }
</style>