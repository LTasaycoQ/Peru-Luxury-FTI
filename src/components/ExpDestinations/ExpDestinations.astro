---
const { texto, title, imagen1, imagen2, imagen3, imagen4, imagen5 } = Astro.props;
---

<section class="font-[Poppins] py-[40px] flex flex-col items-center w-full bg-white">
    
    <div class="w-[90%] max-w-[1000px] flex flex-col">
        
        <h1 class="text-[28px] md:text-[36px] font-semibold mb-[40px] text-center text-black">
            {title}
        </h1>

        <div class="flex pt-[50px] flex-col lg:flex-row gap-[90px] w-full mb-[30px] items-center">
            
            <div class="flex-1">
                <p class="text-gray-700 text-[15px] leading-relaxed text-center lg:text-left whitespace-pre-line">
                   {texto}
                </p>
            </div>
            
            <div class="w-full lg:w-[250px] flex flex-col gap-[15px]">
                <img src={imagen1} class="w-full h-[160px] object-cover rounded-[4px] block shadow-sm" alt="">
                <img src={imagen2} class="w-full h-[160px] object-cover rounded-[4px] block shadow-sm" alt="">
            </div>
        </div>

        <div class="flex pt-[40px] flex-col  md:flex-row justify-between gap-[15px] w-full">
            <div class="flex-1 md:max-w-[290px] max-md:w-[100%]">
                <img src={imagen3} class="w-full h-[160px] object-cover rounded-[4px] block shadow-sm" alt="">
            </div>
            <div class="flex-1 md:max-w-[290px] max-md:w-[100%]">
                <img src={imagen4} class="w-full h-[160px] object-cover rounded-[4px] block shadow-sm" alt="">
            </div>
            <div class="flex-1 md:max-w-[290px] max-md:w-[100%]">
                <img src={imagen5} class="w-full h-[160px] object-cover rounded-[4px] block shadow-sm" alt="">
            </div>
        </div>

    </div>
</section>