---
import { Image } from "astro:assets"
import contactImage from "../../assets/image/Home-img/contact-us.webp"
---

<section class="section-form-Itinerary">
    <div class="container__All--itinerary">
        <div class="container-itinerary">
            <h3 data-aos="fade-right" class="title-h2">Your Journey Starts Here</h3>
            <p class="text-parrafo">Request Your personalizaed itinerary and start your <br> unforgettable journey.</p>
            <div class="w-full">
                <form action="" class="formulario-itinerary">
                    <div class="container-input">
                        <input name="Nombre" placeholder="Full Name" type="text">
                        <input name="Email" type="email" placeholder="Email" >
                    </div>
                    <button class="btn-itenerary" type="submit">Submit</button>
                </form>
                <p id="form-msg-itenerary" style="display:none; color:#DABB42; font-size:13px; margin-top:6px;">âœ“ Sent Successfully</p>
            </div>
        </div>
        <div>
            <Image class="imagenItineray rounded-[12px]" alt="imagen - contact" src={contactImage} />
        </div>
    </div>
</section>
<style>
    .btn-itenerary{
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.5);
        background: linear-gradient(135deg, #cf7b4e, #DABB42);
    }

    .title-h2{
        margin-bottom: 25px;
        font-size: 37.5px;
    }
    .text-parrafo{
        margin-bottom: 65px;
        font-size: 18.4px;
        color: rgb(13, 29, 63);
        font-weight: 300;
    }
    
    .section-form-Itinerary{ 
        padding: 30px;
        margin-top: 12em;
        width: 100%;
        background-color: #F7F7F7;
        font-family: 'Poppins';
        display: flex; 
        gap: 40px;
        justify-content: center;
        align-items: center;

    }

    .container__All--itinerary{
        width: 110em;
        margin-bottom: 100px;
        margin-top: 50px;
        display: flex;
        gap:40px;
        justify-content: space-around;
        align-items: center;
    }

    .formulario-itinerary{
        width: 100%;
        display: flex;
        gap:20px;
    }

    @media (width < 64rem) { 
        .container__All--itinerary{
            flex-direction: column;
        }
        
    }

    .container-input{
        display: flex;
        gap:20px;
    }

 

    .formulario-itinerary input{
        padding: 10px;
        width: 50%;   
        font-weight: 300;
        color: rgb(100, 100, 100);
        outline: none;
        background-color: white;
        border: 1px solid rgb(201, 201, 201);
    }
    .formulario-itinerary button{
        padding: 10px;
        width: 200px;
        border-radius: 50px;
        font-size: 18px;
        font-weight: 700;
        color: white;
        background-color: #DABB42;
        cursor: pointer;
    }
    .formulario-itinerary button:hover{
        background-color: #F7D30E;

    }
    .imagenItineray{
        width: 42em;
    }

       @media (width < 48rem) { 
        .formulario-itinerary button,
        .formulario-itinerary input,
        .formulario-itinerary,
        .container-input{
            width: 100%;
            
            flex-direction: column;
        }
     }
</style>

<script is:inline>
  const apiMailEndpoint = "https://tiny-constancy-peru-luxury-fa631626.koyeb.app/contact";
  const form = document.querySelector(".formulario-itinerary");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const btn = form.querySelector("button");
    btn.disabled = true;
    btn.innerText = "Sending...";

    const formData = new FormData(form);
    const data = {
      nombre: formData.get("Nombre"),
      email: formData.get("Email")
    };

    try {
      const response = await fetch(apiMailEndpoint, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data)
      });

      if (!response.ok) throw new Error(`Error: ${response.status}`);

      await response.json();

      document.getElementById("form-msg-itenerary").style.display = "block";
      form.reset();

    } catch (error) {
      console.error("Error:", error);
      document.getElementById("form-msg-itenerary").innerText = "Something went wrong. Please try again.";
      document.getElementById("form-msg-itenerary").style.color = "#e57373";
      document.getElementById("form-msg-itenerary").style.display = "block";
    } finally {
      btn.disabled = false;
      btn.innerText = "Subscribe";
    }
  });
</script>
