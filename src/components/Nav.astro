---
import { destinations } from "../data/destinations/destinatios";
import HeaderTop from "./HeaderTop.astro";
import { Image } from "astro:assets";
import logo from "../assets/logo/PLJ-LOGO-1.webp";

---

<header class="w-full flex flex-col justify-center items-center relative">
    <HeaderTop />

    <nav class="w-[70%] max-xl:w-[90%] p-[5px]">
        <div class="flex w-full justify-between items-center">
            <a href="/">
                <Image src={logo} loading="eager" class="max-sm:w-[150px]" alt="logo-peru-luxy" />
            </a>

            <button
                id="btnMenu"
                aria-label="Abrir menÃº"
                aria-expanded="false"
                class="lg:hidden rounded-[2px] p-[14px] w-[48px] h-[48px] flex flex-col items-center justify-center bg-[#E6E6E6] cursor-pointer border-none" >
                <i id="openMenu" class="bi bi-list text-[22px]"></i>
                <i id="closeMenu" class="bi bi-x-lg text-[22px] hidden"></i>
            </button>

            <ul class="w-[40%] max-lg:hidden flex items-center justify-around">
                <li class="linksEffect flex items-center gap-[5px] relative">
                    <button id="btnSubmenuDesktop" class="flex items-center gap-[5px] bg-transparent border-none cursor-pointer linksEffect">
                        <i id="iconSubmenu" class="bi bi-caret-right-fill transition-transform duration-300"></i>
                        <a href="/destinations">DESTINATIONS</a>
                    </button>
                    <div id="submenu" class="hidden absolute top-[58px] left-[-35px] z-50 bg-[#393939] w-[225px] shadow-lg shadow-black">
                        <ul class="text-[14px] text-white w-full">
                            {destinations.map(d => (
                                <li class="flex">
                                    <a class="items-Submenu p-[15px] w-full" href={`/${d.distrito}`}>
                                        {d.distrito.toUpperCase().replace(/-/g, " ")}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                </li>
                <li class="linksEffect"><a href="/programs">PROGRAMS</a></li>
                <li class="linksEffect"><a href="/about-us">ABOUT US</a></li>
            </ul>
        </div>
    </nav>

    <div class="lg:hidden w-full">
        <div id="menuResponsive" class="hidden w-full bg-[#393939] text-white z-40">

            <div class="flex items-center justify-between border-b border-[#555]">
                <a class="p-[14px] flex-1 text-[14px] tracking-widest" href="/destinations">DESTINATIONS</a>
                <button
                    id="btnSubMenuResponsive"
                    aria-label="Ver destinos"
                    aria-expanded="false"
                    class="p-[14px] bg-transparent border-none cursor-pointer text-white">
                    <i id="iconSubMenuResponsiveIcon" class="bi bi-caret-down-fill text-[14px]"></i>
                </button>
            </div>

            <div id="submenuResponsive" class="hidden bg-[#2e2e2e] submenu-anim">
                <ul class="text-[13px] py-[8px]">
                    {destinations.map(d => (
                        <li>
                            <a class="flex p-[12px] pl-[24px] items-Submenu" href={`/${d.distrito}`}>
                                {d.distrito.charAt(0).toUpperCase() + d.distrito.slice(1).replace(/-/g, " ")}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <div class="border-b border-[#555]">
                <a class="block p-[14px] text-[14px] tracking-widest" href="/programs">PROGRAMS</a>
            </div>
            <div>
                <a class="block p-[14px] text-[14px] tracking-widest" href="/about-us">ABOUT US</a>
            </div>
        </div>
    </div>
</header>

<script>
    const btnMenu = document.getElementById("btnMenu") as HTMLButtonElement;
    const openMenuIcon = document.getElementById("openMenu") as HTMLElement;
    const closeMenuIcon = document.getElementById("closeMenu") as HTMLElement;
    const menuResponsive = document.getElementById("menuResponsive") as HTMLElement;

    btnMenu.addEventListener("click", () => {
        const isOpen = !menuResponsive.classList.contains("hidden");
        menuResponsive.classList.toggle("hidden");
        openMenuIcon.classList.toggle("hidden", isOpen);
        closeMenuIcon.classList.toggle("hidden", !isOpen);
        btnMenu.setAttribute("aria-expanded", String(!isOpen));
    });

    const btnSubmenuDesktop = document.getElementById("btnSubmenuDesktop") as HTMLButtonElement;
    const submenuDesktop    = document.getElementById("submenu") as HTMLElement;
    const iconSubmenu       = document.getElementById("iconSubmenu") as HTMLElement;

    btnSubmenuDesktop.addEventListener("click", (e) => {
        e.stopPropagation();
        const isOpen = !submenuDesktop.classList.contains("hidden");
        submenuDesktop.classList.toggle("hidden");
        iconSubmenu.style.transform = isOpen ? "rotate(0deg)" : "rotate(90deg)";
        btnSubmenuDesktop.setAttribute("aria-expanded", String(!isOpen));
    });

    document.addEventListener("click", (e) => {
        if (!btnSubmenuDesktop.contains(e.target as Node)) {
            submenuDesktop.classList.add("hidden");
            iconSubmenu.style.transform = "rotate(0deg)";
            btnSubmenuDesktop.setAttribute("aria-expanded", "false");
        }
    });

    const btnSubMenuResponsive = document.getElementById("btnSubMenuResponsive") as HTMLButtonElement;
    const submenuResponsive = document.getElementById("submenuResponsive") as HTMLElement;
    const iconSubMenuResponsiveIcon = document.getElementById("iconSubMenuResponsiveIcon") as HTMLElement;

    btnSubMenuResponsive.addEventListener("click", () => {
        const isOpen = !submenuResponsive.classList.contains("hidden");
        submenuResponsive.classList.toggle("hidden");
        iconSubMenuResponsiveIcon.style.transform = isOpen ? "rotate(0deg)" : "rotate(180deg)";
        btnSubMenuResponsive.setAttribute("aria-expanded", String(!isOpen));
    });
</script>

<style>
    .linksEffect a {
        position: relative;
        font-size: 14px;
        letter-spacing: 0.05em;
        transition: color 0.3s;
    }
    .linksEffect a::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 1.5px;
        background-color: currentColor;
        transition: width 0.3s ease;
    }
    .linksEffect a:hover::after {
        width: 100%;
    }

    .items-Submenu {
        transition: background-color 0.25s;
    }
    .items-Submenu:hover {
        background-color: #515050;
    }

    #iconSubmenu {
        transition: transform 0.35s ease;
    }

    #iconSubMenuResponsiveIcon {
        transition: transform 0.35s ease;
    }

    #menuResponsive {
        transform-origin: top center;
        animation: none;
        position: absolute;
    }
</style>